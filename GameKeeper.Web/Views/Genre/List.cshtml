@{
}
@model List<GameKeeper.Web.Models.Entities.Genre>

<h1>Genres</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Games with this genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.Id</td>
                <td>@genre.Name</td>
               @*  <td>@genre.Games</td> *@
                <td>
                    <a asp-controller="Genre" asp-action="Edit" asp-route-id="@genre.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

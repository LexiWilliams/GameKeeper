@{
}
@model List<GameKeeper.Web.Models.Entities.Player>

<h1>Players</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td>@player.Id</td>
                <td>@player.FirstName</td>
                <td>@player.LastName</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Player" asp-action="Edit" asp-route-id="@player.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
